# ─── PostgreSQL ───────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=          # REQUIRED: Set a strong password (e.g. openssl rand -base64 32)
POSTGRES_DB=eduforge

# ─── API ─────────────────────────────────────────
JWT_SECRET=                 # REQUIRED: Set a strong secret (e.g. openssl rand -base64 48)
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=http://localhost,http://localhost:3000

# ─── Web (build-time for Next.js) ────────────────
NEXT_PUBLIC_API_URL=http://localhost/api

# ─── Nginx ───────────────────────────────────────
NGINX_PORT=80
